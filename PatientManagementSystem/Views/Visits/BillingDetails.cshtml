@model PatientManagementSystem.Models.Visits

@{
    ViewBag.Title = "Details";
}

<style>
    h4 {
        text-align: Left;
    }

    h5 {
        text-align: Left;
    }
    tr{
        height: 16px;
    }

    td {
        border-top: 1px solid black;
        border-bottom: 1px solid black;  
        border-right: 1px solid black;
        border-left: 1px solid black;
    }
</style>
<h4>KENTUCKIANA INFECTIOUS DISEASE CONSULTANCTS, PSC</h4>
<h5>Barbara Wojda, M.D</h5>
<h5>125 Fairfax Avenue, Louisville, KY 40207</h5>
<h5>Phone (502) 895-6155 Fax (502) 895-6156</h5>
<br />

<div>
    <table>
        <colgroup>
            <col width="500" />
            <col width="300" />
        </colgroup>
        <tr>
            <td>Patient Name:  @Html.DisplayFor(model => model.patient.FullName)</td>
            <td>Date of Birth:  @Html.DisplayFor(model => model.patient.BirthDate)</td>
        </tr>
        <tr>
            <td>Date of Service:  @Html.DisplayFor(model => model.VisitDate)</td>
            <td>Insurance Name:  @Html.DisplayFor(model => model.patient.PrimaryInsurance)</td>
        </tr>
    </table>
    <table>
        <colgroup>
            <col width="300" />
            <col width="300" />
            <col width="200" />
        </colgroup>
        <tr>
            <td>Co-Pay amount $ @Html.DisplayFor(model => model.CoPay)</td>
            <td>Payment Type:  @Html.DisplayFor(model => model.PaymentType)</td>
            <td>Check #:  @Html.DisplayFor(model => model.CheckNumber)</td>
        </tr>
    </table>
    <table>
        <colgroup>
            <col width="400" />
            <col width="400" />
        </colgroup>
        <tr>
            <td>Referring Doctor:  @Html.DisplayFor(model => model.patient.ReferingPhysician)</td>
            <td>Total Paid Today $ @Html.DisplayFor(model => model.TotalPaid)</td>
        </tr>
    </table>

    @{ var vt = Model.VisitType.ToString();
     string svt = ""; 
     }

    <table>
        <tr>
            <td width="800">Office Visit:  @{ if (vt != null)
                {
                    svt = vt.Substring(1, 5);
                    Write(svt);
                }
            }</td>
        </tr>
        <tr>
            <td width="800"> Diagnosis:  @Html.DisplayFor(model => model.DiagnosisCode)</td>
        </tr>
    </table>
    <table>
        <colgroup>
            <col width="800" />
        </colgroup>
        <tr>
            <td>Physician's Signature: 
                <img src="~/Images/ElectronicSignature.png" height="30" /> </td>
        </tr>
    </table>
</div>
