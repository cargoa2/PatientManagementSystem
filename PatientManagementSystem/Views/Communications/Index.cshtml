@model IEnumerable<PatientManagementSystem.Models.Communication>

@{
    ViewBag.Title = "Index";
}
@{ int? paid = 0; }
@{ string pn = ""; }
@{ foreach (var p in Model)
    {
        paid = p.PatientId;
        pn = p.Patient.FullName;
    }}

<h2>Communications List</h2>

<table>
    <tr>
        <td>
            <b>Patient Name:  @pn</b>
        </td>
    </tr>
</table>
<br />

<p>
    @Html.ActionLink("Add New Communication", "Create", new { id = paid })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Patient.BirthDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CommDate)
        </th>        
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Patient.BirthDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CommDate)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.Notes)
        </td>
        <td>            
            @Html.ActionLink("Edit", "Edit", new { id=item.CommId }) |
            @Html.ActionLink("Details", "Details", new { id=item.CommId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CommId })
        </td>
    </tr>
}

</table>
<br />
@Html.ActionLink("Go back to patient", "PatientIndex", "Patients", new { id = paid }, null)